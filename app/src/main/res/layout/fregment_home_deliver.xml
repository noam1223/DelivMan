<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyBackground"
    >

    <ProgressBar
        android:id="@+id/progress_bar_deliver_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHomeAllDeliverys_deliver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/finish_delivery_btn_frag_deliver">

    </androidx.recyclerview.widget.RecyclerView>


    <Button
        android:id="@+id/finish_delivery_btn_frag_deliver"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Finish Delivery"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_button_4"/>

</RelativeLayout>