<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#CADAD8">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/task_phone_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:padding="4dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/task_address_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@id/task_phone_show"
            android:padding="4dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/task_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@id/task_address_show"
            android:padding="4dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/task_apartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@id/task_floor"
            android:padding="4dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/task_money_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@id/task_apartment"
            android:padding="4dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>




        <Button
            android:id="@+id/waze_btn_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="waze"
            android:background="@drawable/custom_button_3"
            android:textColor="#ffffff"/>



        <Button
            android:id="@+id/phone_btn_call_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="call"
            android:background="@drawable/custom_button_2"
            android:layout_marginEnd="8dp"/>



    </RelativeLayout>


</LinearLayout>