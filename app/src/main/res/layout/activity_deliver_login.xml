<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Deliver.DeliverLogin">


    <RelativeLayout
        android:id="@+id/area_img_text_relative_layout_deliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deliver"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:textAlignment="center"
            android:elevation="100dp"/>

        <ImageView
            android:id="@+id/image_view_activity_deliver_login"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/shanhai"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>


    <EditText
        android:id="@+id/Deliver_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your Phone number"
        android:text="0500500500"
        android:inputType="textPersonName"
        android:layout_below="@id/area_img_text_relative_layout_deliver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>



    <EditText
        android:id="@+id/Deliver_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="12345678"
        android:hint="Your Password"
        android:inputType="textPassword"
        android:layout_below="@id/Deliver_phoneNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>



    <Button
        android:id="@+id/Login_Deliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/Deliver_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_button_4"/>



    <Button
        android:id="@+id/Signup_deliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:layout_below="@id/Login_Deliver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_button_4"/>


    <ProgressBar
        android:id="@+id/progress_bar_deliver_loging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:visibility="gone"/>


</RelativeLayout>